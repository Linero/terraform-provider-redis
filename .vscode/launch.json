{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug All Provider Tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/provider",
            "args": [
                "-test.v"
            ],
            "showLog": true
        },
        {
            "name": "Debug Current Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/provider",
            "args": [
                "-test.v",
                "-test.run",
                "${selectedText}"
            ],
            "showLog": true
        },
        {
            "name": "Debug Current Integration Test",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${workspaceFolder}/provider",
            "env": {
                "INTEGRATION": "1"
            },
            "args": [
                "-test.v",
                "-test.run",
                "${selectedText}"
            ],
            "showLog": true
        },
    ]
}